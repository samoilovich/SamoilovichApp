<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/actor_avatar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/AvatarRoundCorners" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actor_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_black"
        android:lineSpacingExtra="2dp"
        android:maxLines="2"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:textColor="@color/grayD8"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/actor_avatar"
        app:layout_constraintStart_toStartOf="@+id/actor_avatar"
        app:layout_constraintTop_toBottomOf="@+id/actor_avatar" />

</androidx.constraintlayout.widget.ConstraintLayout>