<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_gradient_movie"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ImageRoundCorners" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/im_movie_poster"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/posterMargin"
        android:layout_marginTop="@dimen/posterMargin"
        android:layout_marginEnd="@dimen/posterMargin"
        android:layout_marginBottom="@dimen/smallPadding"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/tv_movie_name"
        app:layout_constraintDimensionRatio="1:1.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/MoviePosterRoundCorners"
        tools:src="@drawable/poster_tenet" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_movie_age_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/smallPadding"
        android:layout_marginTop="@dimen/smallPadding"
        android:background="@drawable/bg_round_corners_primary_color"
        android:fontFamily="@font/roboto_black"
        android:paddingStart="4dp"
        android:paddingTop="6dp"
        android:paddingEnd="4dp"
        android:paddingBottom="6dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/im_movie_poster"
        app:layout_constraintTop_toTopOf="@+id/im_movie_poster"
        tools:text="16+" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_movie_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/smallPadding"
        app:layout_constraintBottom_toBottomOf="@+id/tv_movie_age_limit"
        app:layout_constraintEnd_toEndOf="@id/im_movie_poster"
        app:layout_constraintTop_toTopOf="@+id/tv_movie_age_limit"
        tools:src="@drawable/ic_liked" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/posterMargin"
        android:layout_marginEnd="@dimen/posterMargin"
        android:background="@drawable/bg_overlay_movie_poster"
        app:layout_constraintBottom_toBottomOf="@+id/im_movie_poster"
        app:layout_constraintEnd_toEndOf="@+id/im_movie_poster"
        app:layout_constraintStart_toStartOf="@+id/im_movie_poster"
        app:layout_constraintTop_toTopOf="@+id/im_movie_poster" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_movie_genres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/smallPadding"
        android:layout_marginEnd="@dimen/smallPadding"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/roboto_light"
        android:textColor="@color/pink"
        android:textSize="8sp"
        app:layout_constraintBottom_toTopOf="@+id/rv_movie_rating"
        app:layout_constraintEnd_toEndOf="@+id/im_movie_poster"
        app:layout_constraintStart_toStartOf="@+id/im_movie_poster"
        tools:text="@string/tags" />

    <com.samoilovich.courseapp.ui.view.RatingView
        android:id="@+id/rv_movie_rating"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_marginStart="@dimen/smallPadding"
        android:layout_marginBottom="10dp"
        app:reviewTextSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/im_movie_poster"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_movie_rating_reviews"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="7dp"
        android:fontFamily="@font/roboto_black"
        android:textAllCaps="true"
        android:textColor="@color/gray"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/rv_movie_rating"
        app:layout_constraintStart_toEndOf="@+id/rv_movie_rating"
        app:layout_constraintTop_toTopOf="@+id/rv_movie_rating"
        tools:text="@string/reviews" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_movie_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/smallPadding"
        android:layout_marginEnd="@dimen/smallPadding"
        android:layout_marginBottom="@dimen/smallPadding"
        android:fontFamily="@font/roboto_black"
        android:textAllCaps="true"
        android:textColor="@color/movieDurationTextColor"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="97 min" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_movie_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/smallPadding"
        android:layout_marginEnd="@dimen/smallPadding"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/roboto_black"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_movie_duration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Tenet" />

</androidx.constraintlayout.widget.ConstraintLayout>